<!-- STYLE CSS -->
<link rel="stylesheet" href="https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/css/style.css">

<style type="text/css">
  .form-wrapper{width:100%;}
</style>
<div class="wrapper">
  <div class="image-holder">
    <img src="https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/images/form-wizard.jpg" alt="">
  </div>

  <div class="form-content">

    <form style="margin-top:-200px;" action='/magic'>
      <div id="wizard">
        <!-- SECTION 1 -->
        <h4></h4>
        <section>
          <h3>Tell Us About Your Audience...</h3>
          <div class="info">






             <!-- <h3 style="margin-bottom: 50px;">Request from You</h3> -->
             <div class="request">
               <div class="special-request">
                 <label for="">My audience are</label>
                 <input type="text" name="group_of_people" placeholder="Marketers, Sales People, Youtubers, etc...." class='form-control', value="<%=params[:group_of_people] %>">
               </div>
               <div class="special-request">
                <label for="">& their demographic is </label>
                 <input type="text" name="demographic" value="<%=params[:demographic] %>" placeholder="25 year olds, Women in Atlanta" class='form-control'>
               </div>
               <div class="special-request">
                <label for="">Their usual Objection is </label>
                <input type="text" name="common_objection" value="<%=params[:common_objection] %>" placeholder="Ive Been Burned in the past" class='form-control'>
               </div>
               <div class="special-request">
                <label for="">But They Want To Be </label>
                <input type="text" name="personality_type" value="<%=params[:personality_type] %>" placeholder="Winners, Do-ers, Alpha Women" class='form-control'>
               </div>
               <div class="special-request">
                <label for="">Their Dream Goal Is To </label>
                <input type="text" id='great_result_input' name="great_result" value="<%=params[:great_result] %>" placeholder="2x Your Sales" class='form-control'>
               </div>
               <div class="special-request">
                <label for="">In What Timeframe?</label>
                <input type="text" name="time_frame" placeholder="30 days, 5 hours" class='form-control', value="<%=params[:time_frame] %>">
               </div>
               <div class="special-request">
                <label for="">Their Biggst Fear Is </label>
                <input type="text" id='terrible_result_input' name="terrible_result" value="<%=params[:terrible_result] %>" placeholder="Blowing The Budget" class='form-control'>
               </div>
             </div>
          </div>
        </section>

        <!-- SECTION 2 -->
        <h4></h4>
        <section>
          <h3>Let's Create A Story...</h3>


        <div class="request">
         <div class="special-request">
           <label for="">They Would Google</label>
           <input type="text" name="audience_search_topic" placeholder="Facebook Algorithm Changes" class='form-control' value="<%=params[:audience_search_topic] %>">
         </div>
          <div class="special-request">
           <label for="">And A Major Percent</label>
           <input type="text" name="percentage" placeholder="70" class='form-control', value="<%=params[:percentage] %>">
         </div>
         <div class="special-request">
           <label for="">All Do This Thing</label>
           <input type="text" id='everyone_action' name="everyone_action" value="<%=params[:everyone_action] %>" placeholder="cold call, send cold emails, etc..." class='form-control'>
         </div>
         <div class="special-request">
           <label for="">They Usually Hate</label>
           <input type="text" name="thing_you_hate" placeholder="Cold Calling, Prospecting, etc..." class='form-control' value="<%=params[:thing_you_hate] %>">
         </div>
         <br>
         <div class="">
           <label for="">But My Favorite Strategy is</label>
           <input type="text" name="strategy_name" placeholder="Content Marketing" class='form-control', value="<%=params[:strategy_name] %>">
         </div>
         <br>
        <div class="">
           <label for="">And I Do This Unconventional Thing</label>
           <input type="text" name="unconventional_action" value="<%=params[:unconventional_action] %>" placeholder="Sending Snail Mail" class='form-control'>
        </div>

        </div>

        </section>

        <!-- SECTION 3 -->
        <h4></h4>
        <section>
          <h3 style="margin-bottom: 50px;">Let's Make It Pop</h3>
          <input type='hidden' name="number" value="<%= "#{rand(2..7)}" %>" />

          <div class="">
           <label for="">Personalization Event:</label>
           <input type="text" name="bl_phase" value="<%=params[:bl_phase] %>" placeholder="Graduation, A Promotion, Failing" class='form-control'>
          </div>
          <br>
          <div class="">
           <label for="">They Contact Me At:</label>
           <input type="text" name="contact" value="<%=params[:contact] %>" placeholder="(555)-111-1234, sales@marketing.com, etc..." class='form-control'>
          </div>
          <br><br>
          <button type='submit' style='width:100%; padding-bottom:12px;' class="nk-btn nk-btn-x2 nk-btn-effect-5-left nk-btn-rounded nk-btn-color-dark-2">
          <span class="icon fa fa-paper-plane"></span>
          Get My Headlines</button>
          <br><br>
        </section>
      </div>
    </form>

    <!-- SOCIAL -->
    <div class="social">
      <a href="https://www.facebook.com/NomadicCreative/" target="_blank">
        <i class="fa fa-facebook"></i>
      </a>
      <a href="https://vimeo.com/nomcre/" target="_blank">
        <i class="fa fa-vimeo"></i>
      </a>
      <a href="https://www.instagram.com/nomadiccreative/" target="_blank">
        <i class="fa fa-instagram"></i>
      </a>
      <a href="https://www.linkedin.com/company/nomadiccreative" target="_blank">
        <i class="fa fa-linkedin"></i>
      </a>
    </div>
  </div>
</div>
</div>

<%= javascript_include_tag "https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/js/jquery-3.3.1.min.js" %>
<%= javascript_include_tag "https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/js/jquery.steps.js" %>
<script>

  $(function(){

    $("#wizard").steps({
      headerTag: "h4",
      bodyTag: "section",
      transitionEffect: "fade",
      enableAllSteps: true,
      titleTemplate :'<span class="number">#index#</span>',
      labels: {
        current: "",
        finish: "Start Over",
        next: "Next",
        previous: "Back"
      },
      onStepChanging: function (event, currentIndex, newIndex) {
        if ( newIndex >= 1 ) {
          $('.steps ul li:first-child a .step-arrow').remove();
        } else {
          $('.steps ul li:first-child a').append('<img src="https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/images/step-arrow.png" alt="" class="step-arrow">');
        }

        if ( newIndex === 1 ) {
          $('.steps ul li:nth-child(2) a').append('<img src="https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/images/step-arrow.png" alt="" class="step-arrow">');;
        } else {
          $('.steps ul li:nth-child(2) a .step-arrow').remove();
        }

        if ( newIndex === 2 ) {
          $('.steps ul li:nth-child(3) a').append('<img src="https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/images/step-arrow.png" alt="" class="step-arrow">');;
        } else {
          $('.steps ul li:nth-child(3) a .step-arrow').remove();
          $('a[href="#finish"]').hide()
        }

        return true;
      }
    });
    // Create Steps Image
    $('.steps ul li:first-child a').append('<img src="https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/images/step-1.png" alt="">').append('<img src="https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/images/step-arrow.png" alt="" class="step-arrow">');
    $('.steps ul li:nth-child(2) a').append('<img src="https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/images/step-2.png" alt="">');
    $('.steps ul li:last-child a').append('<img src="https://nomcre-rails.s3-us-west-2.amazonaws.com/assets/colorlib-wizard-3/images/step-3.png" alt="">');
  })


</script>
