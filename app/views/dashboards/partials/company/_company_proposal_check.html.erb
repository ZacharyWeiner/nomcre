<% if current_user.company.proposals.nil? || current_user.company.proposals.count == 0 %>
  <% @proposal = Proposal.new %>
  <div class="box box-danger ">
    <div class='text-center'>
  <h2 class="box-title ">Set Up Your First Project</h2>
</div>
<div class="" style="color: black">
    <div class="box-header with-border text-center">
    </div>
    <div class="box-body">
      <%= form_for @proposal, class: 'form-horizontal' do |form| %>
      <div class='row'>
        <div class='col-md-3'></div>
        <div class='col-md-6'>
          <div class="box box-solid">
            <h3 class='text-center'> What Should I Be Called? </h3>
            <%= form.text_field :title, class: 'form-control', placeholder: "Give your project a cool name ... " %>
          </div>
        </div>
        <div class='col-md-3'></div>
      </div>
      <br> <br>

        <div class="row">
          <h3 class='text-center'>Is It A Photo Or Video Project? </h3><br>
          <div class="col-md-6">
            <div class='row'>
                <div class='col-md-4'></div>
                  <div class='text-center col-md-8  '>
                    <div class='rounded'>
                    <i class='fa fa-image fa-4x'></i>
                    <br><br>

                    <%= form.radio_button(:proposal_type, "photo", class:'icheck-me', :data => {:skin => 'square', :color => 'green'}) %>
                    <%= form.label(:proposal_type_photo, "Photo") %>
                  </div>
                </div>

              </div>


          </div>
          <div class="col-md-6">
             <div class='row'>

                <div class='text-center col-md-8'>

                    <i class='fa fa-video-camera fa-4x'></i>
                    <br><br>
                    <%= form.radio_button(:proposal_type, "video", class:'icheck-me', :data => {:skin => 'square', :color => 'green'}) %>
                    <%= form.label(:proposal_type_video, "Video") %>
                  </div>

                <div class='col-md-4'></div>

              </div>
          </div>
        </div>
      <br><br>
      <div class='row'>
        <div class='col-md-3'></div>
        <div class='col-md-3'>
          <div class="box box-solid">
            <div class="box-header with-border">
              <h4 class="box-title">When Do You Need This??</h4>
            </div>
            <div class='form-group text-center' style="margin:12px; padding-bottom: 12px;">
              <%= form.text_field :deadline,  class: 'form-control datepicker' %>
            </div>
          </div>
        </div>
        <div class='col-md-3'>
          <div class="box box-solid">
            <div class="box-header with-border">
              <h4 class="box-title">Location</h4>

            </div>
            <div class='form-group' style="margin:12px; padding-bottom: 12px;">
              <br>
              <%= form.collection_select(:location_id, Location.all.order(:name), :id, :name, {}, {class: 'form-control'}) %>
            </div>
          </div>
        </div>
        <div class='col-md-3'></div>
      </div>
      <br><br>
      <div class='row'>

        </div>
      </div>

      <div class='row'>
        <div class='col-md-3'></div>
        <div class='col-md-6'>
          <%= form.hidden_field :company_id, :value => current_user.company.id %>
          <%= form.hidden_field :redirect, :value => 'wizard' %>
          <%= form.submit "Get Started", class: 'btn btn-success btn-block' %>
        </div>
        <div class='col-md-3'></div>
      </div>
      <br>

      <%end %>
    </div>

</div>






  </div>
<% else %>
  <div class="box box-success ">
    <h4><i class="icon fa fa-check"></i> Your First Proposal</h4>
    <hr>
    <div class='container'>
      <div class='row'>
        <div class='col-md-6'>
          <h4> Title: <%= current_user.company.proposals.first.title %> </h4>
        </div>
        <div class='col-md-6'>
           <h4><i class='fa fa-calendar'></i> Deadline: <%= current_user.company.proposals.first.deadline %> </h4>
        </div>
      </div>
      <br>
      <div class='row'>
        <div class='col-md-6'> <h4> Description: </h4> </div>
        <div class='col-md-6'> <h4><i class='fa fa-crosshairs'></i> Shot Type: </h4> </div>
      </div>
      <div class='row'>
        <div class='col-md-6'>
          <%= current_user.company.proposals.first.content %>
        </div>
         <div class='col-md-6'>
          <%= current_user.company.proposals.first.shoot_type %>
        </div>
      </div>
    </div>
  </div>
<% end %>
