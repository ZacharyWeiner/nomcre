
<% if current_user.company.name.nil? || current_user.company.logo.nil? || current_user.company.website.nil?  || current_user.company.instagram.nil? %>
  <div class="alert alert-danger ">
    <h4><i class="icon fa fa-ban"></i> Complete Your Company Profile</h4>
    <div class='row'>
      <div class='col-md-6'>
        <i class='fa fa-user'><h3>Company Name:</h3><br></i><%= current_user.company.name %>
      </div>
      <div class='col-md-6'>
        <% if current_user.company.logo.nil? || current_user.company.logo.file.nil? %>
         <i class='fa fa-image'></i>Add A Logo
        <% else %>
          <%= image_tag current_user.company.logo, class: 'img-responsive img-circle', style: 'max-height:100px;' %>
        <% end %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-6'>
        <i class='fa fa-file'></i>
        <% if current_user.company.website  || current_user.company.website = ""%>
         Please Complete The About You Section
        <% else %>
          <%= current_user.company.website%>
        <% end %>
      </div>
      <div class='col-md-6'>
        <% if current_user.company.instagram.nil? || current_user.company.instagram == "" %>
         <i class='fa fa-image'></i>Add Your Instagram Handle
        <% else %>
          <%= current_user.company.instagram %>
        <% end %>
      </div>
    </div>
    <div class='row'>
      <%= link_to "Update", edit_company_path(current_user.company), class: 'btn btn-success pull-right', style: 'margin-right: 12px;' %>
    </div>
  </div>

<% else %>
  <div class="alert alert-success ">
    <h4><i class="icon fa fa-check"></i> Company Profile Complete</h4>
    <hr>
    <div class='container'>
      <div class='row'>
        <div class='col-md-6'>
          <div class='row'>
            <h3><i class='fa fa-user'></i>Name:</h3>
            <h4 class='details'><%= current_user.company.name  %></h4>
          </div>
          <div class='row'>
            <h3><i class='fa fa-globe'></i>Website:</h3>
            <h5 class='details'><%= current_user.company.website %></h5>
          </div>
          <div class='row'>
            <h3><i class='fa fa-image'></i>Instagram:</h3>
            <%= current_user.company.instagram %>
          </div>
        </div>
        <div class='col-md-6'>
          <h3><i class='fa fa-image'></i>Logo</h3>
          <%= image_tag current_user.company.logo, class: 'img-responsive img-circle', style: 'max-width:150px;' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
