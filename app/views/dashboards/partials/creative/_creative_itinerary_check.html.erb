<% if current_user.schedule_items.count == 0 %>
<div class="alert alert-danger">
  <h4><i class="icon fa fa-plane"></i> Update Your Travel Schedule</h4>
  <hr>
  <% schedule_item = ScheduleItem.new %>
  <%= form_for(schedule_item) do |f| %>
  <% if schedule_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule_item.errors.count, "error") %> prohibited this schedule_item from being saved:</h2>

      <ul>
      <% schedule_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_select :start_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_select :end_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.collection_select(:location_id, Location.all.order(:name), :id, :name, {class: 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Add Travel Plan", class: "btn btn-success" %>
  </div>
<% end %>

</div>
<% else %>
<div class="alert alert-success">
  <h4><i class="icon fa fa-plane"></i>Travel Schedule Complete</h4>
  <hr>
  <ul class="timeline">
  <% current_user.schedule_items.take(3).each do |schedule_item| %>
    <!-- timeline time label -->
    <li class="time-label">
        <span class="bg-green">
            <%= schedule_item.start_date %>
        </span>
    </li>
    <!-- /.timeline-label -->

    <!-- timeline item -->
    <li>
        <!-- timeline icon -->
        <i class="fa fa-plane bg-blue"></i>
        <div class="timeline-item">
            <span class="time"><span>Departure</span> <i class="fa fa-calendar"></i> <%= schedule_item.end_date %></span>

            <h3 class="timeline-header"><%= schedule_item.location.name unless schedule_item.location.nil? %></h3>

            <div class="timeline-body">
              <%= schedule_item.notes %>
            </div>

            <div class="timeline-footer">
              <% if current_user == schedule_item.user %>
                <%= link_to 'Edit', edit_schedule_item_path(schedule_item), class: 'btn btn-warning' %>
                <%= link_to 'Destroy', schedule_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-right' %>
              <% end %>
            </div>
        </div>
    </li>
    <!-- END timeline item -->
  <% end %>
</ul>


</div>
<% end %>
