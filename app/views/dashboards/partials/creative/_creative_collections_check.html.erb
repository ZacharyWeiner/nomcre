<% if current_user.collections.count == 0 || current_user.collections.first.collection_items.nil? || current_user.collections.first.collection_items.count == 0 %>
  <div class="alert alert-danger ">
    <h4><i class="icon fa fa-object-group"></i> Add A Collection</h4>
    <hr>
    Danger alert preview. This alert is dismissable. A wonderful serenity has taken possession of my entire
    soul, like these sweet mornings of spring which I enjoy with my whole heart.
  </div>
<% else %>
<div class="alert alert-success ">
  <h4><i class="icon fa fa-check"></i> Collection Complete</h4>
  <hr>
    <div class='row'>
      <h3 class='details'> <%= current_user.collections.first.title %> </h3>
    </div>
    <div class='row'>
      <% collection_items = current_user.collections.first.collection_items.take(6)%>
      <% row_size = (12/collection_items.count).to_i %>
      <% collection_items.each do |ci| %>
        <div class="col-md-<%= row_size %>">
          <%= image_tag ci.file, class: 'img-responsive', style: 'max-width:150px;' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
