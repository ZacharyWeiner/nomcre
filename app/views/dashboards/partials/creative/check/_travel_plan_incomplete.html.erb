
<div class="box box-danger">
  <h4 style='padding:12px;'><i class="icon fa fa-plane"></i> Update Your Travel Schedule <i class='fa fa-ban pull-right'></i></h4>
  <hr>
  <% schedule_item = ScheduleItem.new %>
  <%= form_for(schedule_item) do |f| %>
  <% if schedule_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule_item.errors.count, "error") %> prohibited this schedule_item from being saved:</h2>

      <ul>
      <% schedule_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class='row' style='padding:12px;'>
    <div class='col-md-4'>
      <div class="form-group">
        <%= f.label :when_do_you_get_here? %>
        <%= f.text_field :start_date,  class: 'form-control datepicker' %>
      </div>
    </div>
    <div class='col-md-4'>
       <div class="form-group">
        <%= f.label :when_do_you_leave?  %>
        <%= f.text_field :end_date,  class: 'form-control datepicker' %>
      </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
        <%= f.label :where_are_you_going?  %><br>
        <span style="color:black" >
            <div class='form-group'>
              <%= f.select(:location_id, options_for_select(Location.locations_for_select), {}, {class: 'form-control'}) %>
            </div>
          </span>
      </div>
    </div>
  </div>

  <div class="form-group" style='padding:12px;'>
    <%= f.label :notes %>
    <%= f.text_area :notes, class: 'form-control', placeholder: "What Cool Stuff Are You Doing While Your There?" %>
  </div>

  <div class="actions">
    <%= f.button '<i class="fa fa-plane"></i> Add Travel Plan'.html_safe, class: "btn btn-success pull-right" %>
    <br>
  </div>
  <br>
<% end %>

</div>

