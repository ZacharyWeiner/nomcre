<div class='row'>
  <div class='col-sm-6 col-md-6 col-lg-6'>
    <div class="card card-stats">
      <div class="card-body white-content rounded">
        <div class="row">
          <div class="col-3">
            <div class="info-icon text-center icon-primary">
              <i class="tim-icons"><ion-icon name='time'></ion-icon></i>
            </div>
          </div>
          <div class="col-9">
            <div class="numbers">
              <p class="card-category">Time Of Day </p>
              <h4 class="card-title"><%= shoot.call_time.utc.strftime('%l:%M %p') unless shoot.call_time.nil? %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='col-sm-6 col-md-6 col-lg-6'>
    <div class="card card-stats">
      <div class="card-body white-content rounded">
        <div class="row">
          <div class="col-3">
            <div class="info-icon text-center icon-primary">
              <i class="tim-icons"><ion-icon name='bonfire'></ion-icon></i>
            </div>
          </div>
          <div class="col-9">
            <div class="numbers">
              <p class="card-category">Background </p>
              <h4 class="card-title"><%= shoot.background %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='col-sm-12 col-md-12 col-lg-12'>
    <div class='row'>
      <div class='col-md-6'>
        <p> Instagram Inspiration </p>
        <div class='row'>
          <%= render :partial => 'shared/black_dashboard/buttons/instagram_inspiration_small', :locals => {:shoot => shoot, :project => shoot.project} %>
        </div>
      </div>
      <div class='col-md-6'>
        <p> Image Boards </p>
        <div class='row'>
         <%= render :partial => 'shared/black_dashboard/buttons/image_boards_small', :locals => {:shoot => shoot, :project => shoot.project} %>
       </div>
     </div>
   </div>
 </div>
</div>
<br>
<h4> Creative Brief </h4>
<hr>
<%= auto_html(shoot.brief){ image(); youtube(:width => '100%', :height => 250, :autoplay => false); simple_format; link(:target => 'blank') } %>
