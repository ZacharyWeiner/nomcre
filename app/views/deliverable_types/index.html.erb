<p id="notice"><%= notice %></p>

<h1>Deliverable Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Specification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliverable_types.each do |deliverable_type| %>
      <tr>
        <td><%= deliverable_type.name %></td>
        <td><%= deliverable_type.specification %></td>
        <td><%= link_to 'Show', deliverable_type %></td>
        <td><%= link_to 'Edit', edit_deliverable_type_path(deliverable_type) %></td>
        <td><%= link_to 'Destroy', deliverable_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

