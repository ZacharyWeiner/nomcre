
<style type="text/css">
  .fa-play{margin-top:-5px;}
</style>
<% counter = 1 %>
<% @showcase_videos.each do |video| %>
  <% if counter%2 == 0 %>
    <%= render :partial => 'khaki/nomcre/showcase/video/standard_left', :locals => {:video => video} %>
  <% else %>
    <%= render :partial => 'khaki/nomcre/showcase/video/standard_right', :locals => {:video => video} %>
  <% end %>
  <% counter =  counter + 1 %>
  <% if counter == 2 %>
    <%= render 'khaki/nomcre/showcase/video/parallax_1' %>
  <% elsif counter == 4 %>
    <%= render 'khaki/nomcre/showcase/video/parallax_2' %>
  <% end %>
<% end %>

