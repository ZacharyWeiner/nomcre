<p id="notice"><%= notice %></p>

<h1>Task Groups</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Shoot</th>
      <th>Complete</th>
      <th>Approver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_groups.each do |task_group| %>
      <tr>
        <td><%= task_group.title %></td>
        <td><%= task_group.shoot %></td>
        <td><%= task_group.complete %></td>
        <td><%= task_group.approver_id %></td>
        <td><%= link_to 'Show', task_group %></td>
        <td><%= link_to 'Edit', edit_task_group_path(task_group) %></td>
        <td><%= link_to 'Destroy', task_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

