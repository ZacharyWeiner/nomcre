<div class='card'>
  <div class='card-header'>
    <div class='card-title'></div>
  </div>
  <div class='card-body'>
      <%= form_tag :action => 'update_names', :id => @shoot.id  do |form|%>
      <div class='form-group'>
        <% @task_groups.each do |task_group| %>
          <%=  text_field_tag "groups[#{task_group.id}]", "task_group_#{task_group.id}[name]", :value => "#{task_group.title}", class: 'form-control'  %>
          <br>
        <% end %>
      </div>
      <input type=submit value='Update' class='btn btn-primary'>
    <% end %>
  </div>
</div>




