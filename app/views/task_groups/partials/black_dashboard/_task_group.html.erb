<div class="card card-plain">
  <div class="card-header" id="heading<%= task_group.id%>" style='background: #d3d7e9'>
    <a data-toggle="collapse" data-parent="#<%= accordion %>" href="#collapse<%= task_group.id%>" aria-controls="collapse<%= task_group.id%>">
      <i class="tim-icons"><i class="fas fa-caret-down"></i></i>
      <h5><%= task_group.title %></h5>
    </a>
  </div>
  <div id="collapse<%= task_group.id%>" class="collapse" role="tabpanel" aria-labelledby="heading<%= task_group.id%>">
    <div class="card-body">
     <%= render :partial => 'tasks/partials/black_dashboard/task_list', :locals => {:tasks => task_group.tasks} %>
    </div>
  </div>
</div>
<br>
