<div class="wizard-container">
  <div class="card card-wizard" data-color="primary" id="wizardProfile">
    <%= form_for(user_profile) do |f| %>
      <div class="card-header text-center">
        <h3 class="card-title">
          Tell Us A Bit About Yourself
        </h3>
        <h5 class="description">.</h5>
        <div class="wizard-navigation">
          <div class="progress-with-circle">
            <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%;"></div>
          </div>
          <ul>
            <li class="nav-item">
              <a class="nav-link active" href="#basic" data-toggle="tab">
                <i class="tim-icons"><ion-icon name="contact"></ion-icon></i>
                <p>Basic Info</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#styles" data-toggle="tab">
                <i class="tim-icons"><ion-icon name="aperture"></ion-icon></i>
                <p>Styles</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="#skills" data-toggle="tab">
                <i class="tim-icons"><ion-icon name="camera"></ion-icon></i>
                <p>Skills</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="#payment" data-toggle="tab">
                <i class="tim-icons"><ion-icon name="cash"></ion-icon></i>
                <p>Payment</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="#pic" data-toggle="tab">
                <i class="tim-icons"><ion-icon name="image"></ion-icon></i>
                <p>Pic</p>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="card-body">
        <div class="tab-content">
          <div class="tab-pane show active" id="basic">
            <h5 class="info-text"> Let's start with the basic information</h5>
            <div class="row justify-content-center mt-5">
              <div class="col-sm-12 text-center info-text">
                <h5> How Would you Like Your Name Displayed? </h5>
                <%= f.text_field :display_name, class: 'form-control', placeholder: "Whats Is Your  Name?" %>
                <br><br>
                <h5> What Should We Know About You? </h5><br>
                <%= f.text_area :description, class: 'form-control', placeholder: "Give us a brief bio" %>
              </div>
            </div>
          </div>
          <div class="tab-pane" id="styles">
            <h5 class="info-text"> Tell us were to check out your current creative skills</h5>
            <div class="row justify-content-center mt-5">
              <div class="col-lg-2 text-right"></div>
              <div class="col-lg-3 text-left">
                <%= check_box_tag 'user_profile[shot_preference][]', 'Product', checked = @user_profile.shot_preference.include?("Product"), :'data-toggle' => "toggle" %>
                  <%= f.label :product %>
                  <br><br>
                  <%= check_box_tag 'user_profile[shot_preference][]', 'Lifestyle', checked = @user_profile.shot_preference.include?("Lifestyle") , :'data-toggle' => "toggle"%>
                  <%= f.label :lifestyle %>
                  <br><br>
                  <%= check_box_tag 'user_profile[shot_preference][]', 'Story', checked = @user_profile.shot_preference.include?("Story"), :'data-toggle' => "toggle" %>
                  <%= f.label :story %>
                </div>
                <div class="col-lg-3 text-left">

                  <%= check_box_tag 'user_profile[shot_preference][]', 'Lookbook', checked = @user_profile.shot_preference.include?("Lookbook"), :'data-toggle' => "toggle" %>
                  <%= f.label :lookbook %>
                  <br><br>
                  <%= check_box_tag 'user_profile[shot_preference][]', 'Action', checked = @user_profile.shot_preference.include?("Action"), :'data-toggle' => "toggle" %>
                  <%= f.label :action %>
                  <br><br>
                  <%= check_box_tag 'user_profile[shot_preference][]', 'Editorial', checked = @user_profile.shot_preference.include?("Editorial"), :'data-toggle' => "toggle" %>
                  <%= f.label :editorial %>
                  <br><br>
              </div>
              <div class="col-lg-2 text-right"></div>
            </div>
          </div>
          <div class="tab-pane" id="skills">
            <h5 class="info-text"> Tell us were to check out your current camera skills</h5>
            <div class="row justify-content-center mt-5">
              <div class="col-lg-2 text-right"></div>
              <div class="col-lg-3 text-left">
                <%= check_box_tag 'user_profile[content_type][]', 'Photography', checked = @user_profile.content_type.include?("Photography"), :'data-toggle' => "toggle" %>
                <%= f.label :photography %>
                <br><br>
                <%= check_box_tag 'user_profile[content_type][]', 'Videography', checked = @user_profile.content_type.include?("Videography"), :'data-toggle' => "toggle" %>
                <%= f.label :videography %>
              </div>
              <div class="col-lg-3 text-left">
                <%= check_box_tag 'user_profile[content_type][]', 'Aerial', checked = @user_profile.content_type.include?("Aerial"), :'data-toggle' => "toggle" %>
                <%= f.label :areial %>
                <br><br>
                <%= check_box_tag 'user_profile[content_type][]', '360 - Video', checked = @user_profile.content_type.include?("360 - Video"), :'data-toggle' => "toggle" %>
                <%= f.label :video_360 %>
                <br><br>
                <%= check_box_tag 'user_profile[content_type][]', '360 - Photo', checked = @user_profile.content_type.include?("360 - Photo"), :'data-toggle' => "toggle" %>
                <%= f.label :photo_360 %>
              </div>
              <div class="col-lg-2 text-right"></div>
            </div>
          </div>
          <div class="tab-pane" id="payment">
            <h5 class="info-text"> How Do You Want To Be Paid</h5>
            <div class="row justify-content-center mt-5">
              <div class="col-sm-12 text-center info-text">
                <h5> How Would You Like To Get Paid?</h5>
                 <select name="user_profile[paypal_or_venmo]" id="user_profile_payment_type" class='form-control'>
                    <% if @user_profile.paypal_or_venmo == "venmo" %>
                      <option value="paypal">PayPal</option>
                      <option value="venmo" selected >Venmo</option>
                      <option value="zelle">Zelle</option>
                    <%elsif @user_profile.paypal_or_venmo == "paypal" %>
                      <option value="paypal" selected>PayPal</option>
                      <option value="venmo"  >Venmo</option>
                      <option value="zelle">Zelle</option>
                    <%elsif @user_profile.paypal_or_venmo == "zelle" %>
                      <option value="paypal" >PayPal</option>
                      <option value="venmo"  >Venmo</option>
                      <option value="zelle" selected>Zelle</option>
                    <% else %>
                      <option value="paypal" >PayPal</option>
                      <option value="venmo"  >Venmo</option>
                      <option value="zelle" >Zelle</option>
                    <% end %>
                  </select>
                <br><br>
                <h5> What Is Your Email/Phone/Username for That Account? </h5><br>
                <%= f.text_field :account_name, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="tab-pane" id="pic">
            <h5 class="info-text"> Upload Your Logo So Creatives Know Who You Are</h5>
            <div class="row justify-content-center">
              <div class="col-lg-10 text-center">
                <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                  <div class="fileinput-new thumbnail">
                   <!-- < image_tag company.logo unless company.logo.nil? > -->
                  </div>
                  <div class="fileinput-preview fileinput-exists thumbnail"></div>
                  <div>
                     <label class="btn btn-simple btn-primary btn-lg">
                      <i class='fas fa-camera fa-2x'></i>
                      Upload new image
                      <span style="display:none;">
                      <%= f.file_field :profile_photo, id: :user_profile_profile_photo, onchange: "validateImage(this);",
                     data: { max_file_size: 15.megabytes }  %>
                    </label>
                    <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <div class="pull-right">
          <input type='button' class='btn btn-next btn-fill btn-primary btn-wd' name='next' value='Next' />
          <!-- <input type='button' class='btn btn-finish btn-fill btn-primary btn-wd' name='finish' value='Finish' /> -->
          <%= f.hidden_field :redirect, :value => 'collections' %>
          <%= f.submit class: 'btn btn-finish btn-fill btn-primary btn-wd', id: 'uploadImageBtn'  %>
        </div>
        <div class="pull-left">
          <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
        </div>
        <div class="clearfix"></div>
      </div>
    <% end %>
  </div>
</div>


<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Sorry Something Went Wrong ... </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body-image">
        <p> </p>
      </div>
      <div class="modal-footer">

        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Please Wait While Your File Uploads ... </h5>
      </div>
      <div class="modal-body text-center">
        <p><i class="fa fa-spinner fa-spin" style="font-size:24px"></i> </p>
      </div>
      <div class="modal-footer">

        <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
      </div>
    </div>
  </div>
</div>

