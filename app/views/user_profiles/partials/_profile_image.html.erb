
<div class="box box-widget widget-user">
  <!-- Add the bg color to the header using any of the bg-* classes -->
  <div class="widget-user-header bg-black" style="background: url('<%= @user_profile.safe_header_image_url%>') center center;background-size:cover">
    <h3 class="widget-user-username"><%= @user_profile.display_name %></h3>
    <h5 class="widget-user-desc">Web Designer</h5>
  </div>
  <div class="widget-user-image">
     <%= image_tag @user_profile.safe_profile_image_url, class: "img-circle" %>
  </div>
  <div class="box-footer">
    <div class="row">
      <div class="col-sm-4 border-right">
        <div class="description-block">
          <h5 class="description-header">3,200</h5>
          <span class="description-text"><i class='fa fa-camera'></i></span>
        </div>
        <!-- /.description-block -->
      </div>
      <!-- /.col -->
      <div class="col-sm-4 border-right">
        <div class="description-block">
          <h5 class="description-header">13,000</h5>
          <span class="description-text"><i class='fa fa-video-camera'></i></span>
        </div>
        <!-- /.description-block -->
      </div>
      <!-- /.col -->
      <div class="col-sm-4">
        <div class="description-block">
          <h5 class="description-header">35</h5>
          <span class="description-text"><i class='fa fa-briefcase'></i></span>
        </div>
        <!-- /.description-block -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
</div>
