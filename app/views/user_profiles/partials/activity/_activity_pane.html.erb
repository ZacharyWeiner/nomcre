<div class="active tab-pane" id="activity">
  <% @user_profile.activities.each do |activity|%>
    <div class="post">
    <div class="user-block">
      <%= image_tag @user_profile.profile_photo, class: 'img-circle img-bordered-sm' %>
          <span class="username">
            <a href="#"><%= @user_profile.display_name%></a>
            <a href="#" class="pull-right btn-box-tool"><i class="fa fa-times"></i></a>
          </span>
      <span class="description"><%= activity.activity_type %>- <%= activity.created_at %> </span>
    </div>
    <%if activity.activity_type == UserActivityType.collection_added %>
       <% collection = Collection.find(activity.object_id) %>
       <%= link_to collection  do %>
        <h4> <%= collection.title %> </h4>
       <% end %>
       <div class='row'>
        <% collection.collection_items.each do |ci| %>
          <div class='col-md-3'>
            <% if ci.item_type == "image" %>
              <%= image_tag ci.file.url(:small), class: 'img-responsive' %>
            <% else %>
            <% end %>
          </div>
        <% end %>
       </div>
    <% elsif  activity.activity_type == UserActivityType.collection_photo_added %>
       <%= image_tag CollectionItem.find(activity.object_id).file %> <br>
    <% elsif  activity.activity_type == UserActivityType.collection_video_added %>
      <div class='text-center'>
        <%= video_tag CollectionItem.find(activity.object_id).video, controls: true, autobuffer: true, oncontextmenu:"return false;",  controlsList:"nodownload", class: 'img-responsive', style: 'max-height: 400px;' %> <br>
      </div>
    <% elsif  activity.activity_type == UserActivityType.proposal_accepted %>
      from: <%= Proposal.find(activity.object_id).company.name %> <br>
    <% elsif  activity.activity_type == UserActivityType.proposal_created %>
      <%= Proposal.find(activity.object_id).company.name %> <br>
    <% elsif  activity.activity_type == UserActivityType.travel_plan_created %>
        <%si = ScheduleItem.find(activity.object_id) %>
        <div class="info-box">
          <span class="info-box-icon bg-aqua"><i class="fa fa-map-marker"></i></span>
          <div class="info-box-content">
            <span class="info-box-number">Is Traveling To:</span>
            <span class="info-box-number"><%= si.location.name %></span>
            <br>
            <span class="info-box-text">On: <small><%= si.start_date %></small></span>
          </div>
        </div>
    <% else %>
    <% end %>
</div>
  <% end %>
</div>




