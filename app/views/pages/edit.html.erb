
<h1>Editing Page - <%= @page.status %></h1>
<%= link_to 'Show', @page %> |
<%= link_to 'Back', pages_path %>
<%= render 'form', page: @page %>


<br>
<% if @page.status = 'published' %>
<%= link_to "Publish", page_publish_path(@page) %>
<% else %>
<%= link_to "Un-Publish", page_publish_path(@page) %>
<% end %>
<hr/>
<div class='box'>
  <div> <%= link_to "New Section", new_page_page_section_path(@page.id), class: 'btn btn-primary' %></div>
<div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <tbody><tr>
         <th>Page</th>
      <th>Title</th>
      <!-- <th>Content</th> -->
      <th>Order</th>
      <th colspan="3"></th>
      </tr>

         <% @page_sections.each do |page_section| %>
          <tr>
            <td><%= page_section.page.title %></td>
            <td><%= page_section.title %></td>
            <!-- <td><%= page_section.content.html_safe %></td> -->
            <td><%= page_section.order %></td>
            <td><%= link_to "", page_section, class: 'fa fa-eye' %></td>
            <td><%= link_to  "", edit_page_section_path(page_section), class:'fa fa-edit' %></td>
            <td><%= link_to "", page_section, class: 'fa fa-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody></table>
  </div>
</div>
