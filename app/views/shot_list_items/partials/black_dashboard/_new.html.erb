<div class="row">
  <div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <%= render :partial => 'proposals/partials/black_dashboard/widgets/deadline_widget', :locals =>{:proposal => @proposal} %>
  </div>
  <!-- ./col -->
  <div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <% if @proposal.proposal_type == 'photo' %>
      <%= render :partial => 'proposals/partials/black_dashboard/widgets/photo_shot_count_widget', :locals =>{:proposal => @proposal} %>
    <% else %>
      <%= render :partial => 'proposals/partials/widgets/video_shot_count_widget', :locals =>{:proposal => @proposal} %>
    <% end %>
  </div>
  <div class="col-lg-3 col-xs-6">
    <%= render :partial => 'proposals/partials/black_dashboard/widgets/shoot_background_widget', :locals =>{:proposal => @proposal} %>
  </div>
  <!-- ./col -->
  <div class="col-lg-3 col-xs-6">
    <%= render :partial => 'proposals/partials/black_dashboard/widgets/shoot_type_widget', :locals =>{:proposal => @proposal} %>
  </div>
  <!-- ./col -->
</div>
<h1>Add To Your Shot List </h1>

<%= render 'form', shot_list_item: @shot_list_item %>

<% link_to '<i class="fa fa-arrow-left" ></i> Back'.html_safe, shot_list_items_path %>

