<% head_url = @collection.collection_items.first.file.url unless @collection.collection_items.count ==0  %>
<% content_for :head do %>
<meta property="og:url" content="<%= request.original_url %>" />
<meta property="og:type" content="profile" />
<meta property="og:title" content="<%= @collection.title %>" />
<meta property="og:description" content="A Collection By <%= @collection.user.name %>" />
<meta property="og:image" content="<%= head_url%>" />
<% end %>



<div class="nk-header-title nk-header-title-sm nk-header-title-parallax nk-header-title-parallax-opacity">
  <div class="bg-image op-5">
    <div style="background-image: url('<%= head_url %>');"></div>
  </div>
  <div class="nk-header-table">
    <div class="nk-header-table-cell">
      <div class="container">
        <h1 class=""><%= @collection.title %></h1>
      </div>
    </div>
  </div>
  <div class="nk-header-text-bottom">
    <%= @collection.user.user_profile.display_name%>
  </div>
</div>
<div class='row'>
  <div class="col-md-3">
    <%= link_to "<i class='fa fa-arrow-left'></i>Back".html_safe, collections_path %>
  </div>
  <div class='col-md-6'></div>
  <div class='col-md-3' style='text-align: right'>
    <% if current_user.nil? == false && current_user == @collection.user %>
      <%= link_to "<i class='fa fa-edit'></i> Edit".html_safe, edit_collection_path(@collection) %> |
      <%= link_to "<i class='fa fa-plus'></i> Add Images".html_safe, new_collection_collection_item_path(@collection) %>
      <% end %>
  </div>
</div>
<br>

<div class="nk-isotope nk-isotope-3-cols nk-popup-gallery bg-dark-1">
  <% @collection.collection_items.each do |item| %>
    <div class="nk-isotope-item">
      <div class="nk-image-box-1">
        <%= link_to item.file.url, class: 'nk-gallery-item nk-no-effect', :'data-size' => "#{item.width}x#{item.height}"  do %>
          <%= image_tag item.file %>
        <% end %>
      </div>
    </div>
    <% end %>
</div>








