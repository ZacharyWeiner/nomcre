<dic class='card' style='padding:12px'>
<%= form_with(model: assistant, local: true) do |form| %>
  <% if assistant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assistant.errors.count, "error") %> prohibited this assistant from being saved:</h2>

      <ul>
      <% assistant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='row'>
    <div class='col-sm-12 col-md-6 col-lg-6'>
       <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :assistant_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :paypal_email %>
        <%= form.text_field :paypal_email, id: :assistant_paypal_email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :phone %>
        <%= form.text_field :phone, id: :assistant_phone, class: 'form-control' %>
      </div>
    </div>
    <div class='col-sm-12 col-md-6 col-lg-6'>
      <div class="form-group">
        <%= form.label :rate %>
        <%= form.number_field :rate, id: :assistant_rate, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :assistant_type %>
        <%= form.select :assistant_type, options_for_select([['General', 'General'], ['HMU', 'HMU'], ['Model','Model']]), {}, {class: 'form-control '}  %>
      </div>
    </div>
  </div>





  <% if defined? @proposal %>
    <%= form.hidden_field :proposal_id, :value => @proposal.id %>
  <% end %>

  <div class="actions">
    <%= form.submit "Save", class: 'btn btn-primary' %>
  </div>
<% end %>
</dic>
