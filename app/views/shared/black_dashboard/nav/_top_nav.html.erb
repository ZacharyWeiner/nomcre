<% @notifications = Notification.where(user: current_user).where(read:false).where.not(notification_type: "New Message").where.not(notification_type: "Task") %>
<!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-absolute navbar-transparent">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <div class="navbar-minimize d-inline">
              <button class="minimize-sidebar btn btn-link btn-just-icon" rel="tooltip" data-original-title="Sidebar toggle" data-placement="right">
                <span class=''><ion-icon name='list' class='visible-on-sidebar-regular'></ion-icon></span>
                <ion-icon name='list' class='tim-icons visible-on-sidebar-mini'></ion-icon>
              </button>
            </div>
            <div class="navbar-toggle d-inline">
              <button type="button" class="navbar-toggler">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
              </button>
            </div>
            <a class="navbar-brand" href="javascript:void(0)"><%= controller_name.gsub('_', ' ') %>: <%= action_name %></a>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
          </button>
          <div class="collapse navbar-collapse" id="navigation">
            <ul class="navbar-nav ml-auto">
              <li class="search-bar input-group">
                <button class="btn btn-link" id="search-button" data-toggle="modal" data-target="#searchModal">
                  <ion-icon name="search" size='large' class='tim-icons'></ion-icon>
                  <span class="d-lg-none d-md-block">Search</span>
                </button>
              </li>
              <li class="dropdown nav-item">
                <a href="javascript:void(0)" class="dropdown-toggle nav-link" data-toggle="dropdown">
                  <div class="<%= @notifications.count > 0 ? 'notification': 'none' %> d-none d-lg-block d-xl-block"></div>
                  <ion-icon name="pulse" size='large' class='tim-icons'></ion-icon>

                  <p class="d-lg-none">
                    Notifications
                  </p>
                </a>
                <ul class="dropdown-menu dropdown-menu-right dropdown-navbar">
                  <%if @notifications.count > 0 %>
                  <% @notifications.each do |notification| %>
                    <li class='nav-link'>
                      <% if notification.notification_type == "New Request" %>
                        <%= link_to "New Work Request", proposal_requests_path, class: 'nav-item dropdown-item' %>
                      <% elsif notification.notification_type == "Request Accepted" %>
                        <%= link_to "Your Request Has Been Accepted", proposal_path(notification.notification_object_id), class: 'nav-item dropdown-item' %>
                      <% elsif notification.notification_type == "Proposal Assigned" %>
                        <%= link_to "You have a new job", proposal_path(notification.notification_object_id), class: 'nav-item dropdown-item' %>
                      <% end %>
                    </li>


                    <% end %>
                  <% elsif %>
                  <li class='nav-link'>
                       0 New Notifications
                  </li>
                  <% end %>
                    <li class="separator d-lg-none"></li>
                    <li class="nav-link">
                      <%= link_to notifications_path, class: 'nav-item dropdown-item text-center' do %>
                      <hr>
                        <ion-icon name='eye'></ion-icon> View All
                        <% end %>
                    </li>
                </ul>
              </li>
              <li class="dropdown nav-item">
                <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                  <div class="photo">
                    <%= image_tag current_user.user_profile.safe_profile_image_url %>
                  </div>
                  <b class="caret d-none d-lg-block d-xl-block"></b>
                  <p class="d-lg-none">
                    Log out
                  </p>
                </a>
                <ul class="dropdown-menu dropdown-navbar">
                  <li class="nav-link">
                    <%= link_to 'My Profile', user_profile_path(@current_user.user_profile), class: 'nav-item dropdown-item' unless current_user.user_profile.nil? %>
                  </li>
                  <li class="nav-link">
                     <%= link_to 'Company Profile', company_path(@current_user.company), class: 'nav-item dropdown-item'unless current_user.company.nil? %>
                  </li>
                  <li class="dropdown-divider"></li>
                  <li class="nav-link">
                    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-item dropdown-item' %>
                  </li>
                </ul>
              </li>
              <li class="separator d-lg-none"></li>
            </ul>
          </div>
        </div>
      </nav>
      <div class="modal modal-search fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="SEARCH">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <ion-icon name="close" size='large' class='tim-icons'></ion-icon>
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- End Navbar -->
