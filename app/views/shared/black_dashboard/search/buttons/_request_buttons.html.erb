<!-- If the proposal has been assigned to a Creative Do Not Show the buttons -->
<% if shoot.creative == user  %>
  <%= render :partial => 'shared/black_dashboard/search/buttons/approved', :locals => {shoot: shoot, user: user }%>
<% else %>
  <% request = CreativeRequest.where(creative: user).where(shoot: shoot).where(accepted: false).first %>
  <% if request.nil? %>
    <!-- There is no accepted request yet -->
    <%= render :partial =>  'shared/black_dashboard/search/buttons/request', :locals => {shoot: shoot, user: user } %>
  <% else %>
      <% if shoot.project.deposit_is_paid == true  %>
        <%= link_to "<i class='fa fa-check'> </i> Approve".html_safe, assign_shoot_path(request), class: 'btn btn-primary btn-block' %>
      <% else %>
        <small class='text-danger'> Deposit Must Be Paid to Assign Creative </small>
        <%= link_to 'Assign', '#', class: 'btn btn-success disabled pull-right' %>
      <% end %>
  <% end %>
<% end %>

