<!-- If the proposal has been assigned to a Creative Do Not Show the buttons -->
<% if shoot.creative == user  %>
  <%= render :partial => 'shared/black_dashboard/search/buttons/approved', :locals => {shoot: shoot, user: user }%>
<% else %>
  <% if !shoot.has_request_for_user(user.id) %>
    <!-- There is no accepted request yet -->
    <%= render :partial =>  'shared/black_dashboard/search/buttons/request', :locals => {shoot: shoot, user: user } %>
  <% else %>
      <% if shoot.project.deposit_is_paid == true  %>
        <% request_id = shoot.request_for_user(user.id).id %>
        <%= link_to "<i class='fa fa-check'> </i> Assign".html_safe, shoot_assign_from_request_path(shoot, request_id), class: 'btn btn-success pull-right' %>
      <% else %>
        <%= link_to "<i class='fa fa-check'> </i> Assign".html_safe, '#', class: 'btn btn-success disabled pull-right' %><br>
        <small class='card-category text-danger'> Deposit Must Be Paid to Assign Creative </small>
      <% end %>
  <% end %>
<% end %>

