<div style="padding-top:75px;"></div>
<p id="notice"><%= notice %></p>

<h1>Email Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Example image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_templates.each do |email_template| %>
      <tr>
        <td><%= email_template.name %></td>
        <td><%= email_template.example_image.file %></td>
        <td><%= email_template.description %></td>
        <td><%= link_to 'Show', email_template %></td>
        <td><%= link_to 'Edit', edit_email_template_path(email_template) %></td>
        <td><%= link_to 'Destroy', email_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email Template', new_email_template_path %>
