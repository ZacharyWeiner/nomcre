<p id="notice"><%= notice %></p>

<h1>Deliverables</h1>

<table>
  <thead>
    <tr>
      <th>Deliverable type</th>
      <th>Asset</th>
      <th>Project</th>
      <th>Approved</th>
      <th>Slug</th>
      <th>Review link</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliverables.each do |deliverable| %>
      <tr>
        <td><%= deliverable.deliverable_type %></td>
        <td><%= deliverable.asset %></td>
        <td><%= deliverable.project %></td>
        <td><%= deliverable.approved %></td>
        <td><%= deliverable.slug %></td>
        <td><%= deliverable.review_link %></td>
        <td><%= deliverable.status %></td>
        <td><%= link_to 'Show', deliverable %></td>
        <td><%= link_to 'Edit', edit_deliverable_path(deliverable) %></td>
        <td><%= link_to 'Destroy', deliverable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

