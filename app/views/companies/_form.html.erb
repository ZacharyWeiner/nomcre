<%= form_for(company) do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group has-feedback">
    <%= f.text_field :name, class: 'form-control', placeholder: "Whats Is Your Company's Name?" %>
    <span class='fa fa-user form-control-feedback'></span>
  </div>

  <div class="form-group has-feedback">
      <div class='row'>
        <div class='col-md-2'> <h3>  <i class='fa fa-image fa-3x'> </i> Logo</h3> <%= f.file_field :logo %></div>
        <div class='col-md-4'>

        </div>
        <div class='col-md-6'></div>
      </div>

  </div>

  <div class="form-group has-feedback">
    <%= f.text_field :phone, class: 'form-control', placeholder: "What' the best number to reach you?" %>
    <span class='fa fa-phone form-control-feedback'></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.text_field :website, class: 'form-control', placeholder: 'Website - www.example.com' %>
    <span class='fa fa-globe form-control-feedback'></span>
  </div>
  <div class="form-group has-feedback">
    <%= f.text_field :instagram, class: 'form-control', placeholder: '@YourInstagramAccount' %>
    <span class='fa fa-instagram form-control-feedback'></span>
  </div>
  <div class="actions">
    <%= f.submit "Save Company", class: 'btn btn-success' %>
  </div>
<% end %>
