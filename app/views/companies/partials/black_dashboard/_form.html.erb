<div class="wizard-container">
  <div class="card card-wizard" data-color="primary" id="wizardProfile">
    <%= form_for(company) do |f| %>
      <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
      <div class="card-header text-center">
        <h3 class="card-title">
          Tell Us A Bit About Your Company
        </h3>
        <h5 class="description">.</h5>
        <div class="wizard-navigation">
          <div class="progress-with-circle">
            <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%;"></div>
          </div>
          <ul>
            <li class="nav-item">
              <a class="nav-link active" href="#basic" data-toggle="tab">
                <i class="tim-icons"><ion-icon name="business"></ion-icon></i>
                <p>Basic Info</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#social" data-toggle="tab">
                <i class="tim-icons"><ion-icon name="share"></ion-icon></i>
                <p>Social Info</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="#logo" data-toggle="tab">
                <i class="tim-icons"><ion-icon name="images"></ion-icon></i>
                <p>Logo</p>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="card-body">
        <div class="tab-content">
          <div class="tab-pane show active" id="basic">
            <h5 class="info-text"> Let's start with the basic information</h5>
            <div class="row justify-content-center mt-5">
              <div class="col-sm-5">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="tim-icons pull-left"><ion-icon name="business"></ion-icon></i>
                    </div>
                  </div>
                  <!-- <input type="text" name="firstname" class="form-control" placeholder="First Name..."> -->
                  <%= f.text_field :name, class: 'form-control', placeholder: "Whats Is Your Company's Name?" %>
                </div>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="tim-icons"><ion-icon name="call"></ion-icon></i>
                    </div>
                  </div>
                  <!-- <input type="email" required name="email" class="form-control" placeholder="Email..."> -->
                  <%= f.text_field :phone, class: 'form-control', placeholder: "What' the best number to reach you?" %>
                </div>
              </div>
            </div>
          </div>
          <div class="tab-pane" id="social">
            <h5 class="info-text"> Tell us were to check out your current creative</h5>
            <div class="row justify-content-center mt-5">
              <div class="col-sm-5">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="tim-icons"><ion-icon name="globe"></ion-icon></i>
                    </div>
                  </div>
                  <%= f.text_field :website, class: 'form-control', placeholder: 'Website - www.example.com' %>
                </div>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="tim-icons"><ion-icon name="logo-instagram"></ion-icon></i>
                    </div>
                  </div>
                  <%= f.text_field :instagram, class: 'form-control', placeholder: '@YourInstagramAccount' %>
                </div>
              </div>
            </div>
          </div>
          <div class="tab-pane" id="logo">
            <h5 class="info-text"> Upload Your Logo So Creatives Know Who You Are</h5>
            <div class="row justify-content-center">
              <div class="col-lg-10 text-center">
                <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                  <div class="fileinput-new thumbnail">
                   <%= image_tag company.logo unless company.logo.nil? %>
                  </div>
                  <div class="fileinput-preview fileinput-exists thumbnail"></div>
                  <div>
                     <label class="btn btn-simple btn-primary btn-lg">
                      <i class='fas fa-camera fa-2x'></i>
                      Upload new image
                      <span style="display:none;">
                        <%= f.file_field :logo, id: :company_logo, onchange: "validateImage(this);",
                     data: { max_file_size: 15.megabytes }  %>
                      </span>
                    </label>
                    <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <div class="pull-right">
          <input type='button' class='btn btn-next btn-fill btn-primary btn-wd' name='next' value='Next' />
          <!-- <input type='button' class='btn btn-finish btn-fill btn-primary btn-wd' name='finish' value='Finish' /> -->
          <%= f.submit class: 'btn btn-finish btn-fill btn-primary btn-wd'  %>
        </div>
        <div class="pull-left">
          <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
        </div>
        <div class="clearfix"></div>
      </div>
    <% end %>
  </div>
</div>
