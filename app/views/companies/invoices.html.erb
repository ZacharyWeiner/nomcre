 <div class='container'>
 <% current_user.company.proposals.where(deposit_paid: true).each do |p| %>
    <div class='row'>
      <div class='col-md-8'><%= p.title %></div>
      <div class='col-md-2'>
        <%= link_to "Deposit", proposal_invoice_path(p, :q => "deposit"), class: 'btn btn-primary' %>
      </div>
      <div class='col-md-2'>
        <%= link_to "Balance", proposal_invoice_path(p, :q => "balance"), class: 'btn btn-primary' %>
      </div>
    </div>
    <hr>
  <% end %>
</div>
