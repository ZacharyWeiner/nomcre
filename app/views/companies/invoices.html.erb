<div class="box">
  <div class="box-header with-border">
  <h3 class="box-title">Invoices</h3>
</div>
<div class="box-body">
  <table class="table table-bordered">
    <tbody><tr>
      <th>Proposal</th>
      <th>Deposit On</th>
      <th>Paid On</th>
      <th >Deposit Invoice</th>
      <th >Balance Invoice</th>
    </tr>
    <% current_user.company.proposals.where(deposit_paid: true).each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.deposit_paid_on%></td>
      <td><%= p.balance_paid_on unless p.paid != true%></td>
      <td>
         <%= link_to "View", proposal_invoice_path(p, :q => "deposit"), class: 'btn btn-primary' %>
      </td>
      <td>
        <% if p.paid != true  %>
          <%= link_to "Unpaid", proposal_invoice_path(p, :q => "balance"), class: 'btn btn-primary disabled' %>
        <% else %>
          <%= link_to "View", proposal_invoice_path(p, :q => "balance"), class: 'btn btn-primary' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

