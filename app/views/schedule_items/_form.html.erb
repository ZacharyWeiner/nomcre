<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Where Are You Going?</h3>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_for(schedule_item) do |f| %>
    <% if schedule_item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(schedule_item.errors.count, "error") %> prohibited this schedule_item from being saved:</h2>
        <ul>
          <% schedule_item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <div class="box-body">
        <div class="form-group">
          <label for="exampleInputFile">I'm Going To:</label>
          <%= f.collection_select(:location_id, Location.all.order(:name), :id, :name, {class: 'form-control'}) %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">From: </label>
          <%= f.date_select :start_date, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">To: </label>
          <%= f.date_select :end_date, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="exampleInputFile">What Do You Want Clients To Know About Your Trip?</label>
          <%= f.text_area :notes, class: 'form-control' %>
        </div>
      </div>
      <!-- /.box-body -->

      <div class="box-footer">
        <%= f.submit "Add To Schedule", class: 'btn btn-primary' %>
      </div>
  <%end%>
</div>
