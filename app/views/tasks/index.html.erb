<% if @tasks.count == 0 %>
          <div class="alert alert-warning alert-dismissible">
        <h4><i class="icon fa fa-warning"></i> Wo0ps!</h4>
        You Havent Started Any Proposals Yet!
      </div>
        <% else %>
<div class='row'>
  <div class='col-md-2'></div>
  <div class='col-md-8'>
    <div class="box box-primary">
      <div class="box-header ui-sortable-handle" style="cursor: move;">
        <i class="fa fa-clipboard"></i>

        <h3 class="box-title">To Do List</h3>

        <div class="box-tools pull-right">

        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->

        <ul class="todo-list ui-sortable">
          <% @tasks.each do |task| %>
          <li>
            <!-- drag handle -->
            <span class="handle ui-sortable-handle">
                  <i class="fa fa-ellipsis-v"></i>
                  <i class="fa fa-ellipsis-v"></i>
                </span>
            <!-- checkbox -->

            <!-- todo text -->
            <span class="text"><%= task.proposal.title %> - <%= task.description %></span>
            <!-- Emphasis label -->
            <small class="label-success"><i class="fa fa-clock-o"></i>  <%= (task.deadline - Date.today).to_int %> days</small>
            <!-- General tools such as edit or delete-->
            <div class="tools">
              <%= link_to task_task_complete_path(task) do %><i class="fa fa-thumbs-up"></i> <% end %>
            </div>
          </li>
          <%end%>
        </ul>
        <% end %>
      </div>
      <!-- /.box-body -->
      <div class="box-footer clearfix no-border">

      </div>
    </div>
  </div>
  <div class='col-md-2'></div>
</div>
