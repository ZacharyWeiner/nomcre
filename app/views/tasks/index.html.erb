<div class="box">
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Proposal</th>
          <th>Company</th>
          <th>Description</th>
          <th>Deadline</th>
          <th>Completed</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.proposal.title %></td>
            <td><%= task.proposal.company.name %></td>
            <td><%= task.description %></td>
            <td><%= task.deadline %></td>
            <td><%= task.completed? %></td>
            <td><%= link_to 'Show', task %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <% if task.user == current_user %>
            <td><%= link_to 'Complete', task_task_complete_path(task) %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

