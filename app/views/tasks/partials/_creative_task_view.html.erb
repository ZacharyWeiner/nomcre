
<% if tasks.count == 0 %>
  <div class="alert alert-warning alert-dismissible">
    <h4><i class="icon fa fa-warning"></i> Wo0ps!</h4>
    You Havent Started Any Proposals Yet!
  </div>
<% else %>
  <div class="box box-gray">
    <div class="box-header ui-sortable-handle" style="cursor: move;">
      <i class="fa fa-clipboard"></i>
      <h3 class="box-title">To Do List</h3>
      <div class="box-tools pull-right">
      </div>
    </div>
    <div class='row'>
      <!-- <div class='col-md-2'></div> -->
      <div class='col-md-6'>
        <div class='box-header text-center'><h2>My Tasks</h2></div>
        <div class="box-body">

          <ul class="todo-list ui-sortable">
            <% tasks.where.not(can_accept: 'creative' ).each do |task| %>
              <li>
                <span class="handle ui-sortable-handle">
                  <i class="fa fa-ellipsis-v"></i>
                  <i class="fa fa-ellipsis-v"></i>
                </span>
                <span class="text">
                  <%= task.proposal.title %> - <%= task.description %>
                </span>
                <% if task.deadline > Date.today %>
                  <small class="label label-success"><i class="fa fa-clock-o"></i>  <%= (task.deadline - Date.today).to_int %> days</small>
                <% else %>
                  <small class="label label-danger"><i class="fa fa-clock-o"></i>  <%= (task.deadline - Date.today).to_int %> days</small>
                <% end %>
                <div class="tools">
                  <%= link_to task_task_complete_path(task) do %><i class="fa fa-thumbs-up"></i> <% end %>
                </div>
              </li>
            <%end%>
          </ul>
          <div class="box-footer clearfix no-border">
          </div>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='box-header text-center'><h2>Company Tasks</h2></div>
        <div class="box-body">
          <ul class="todo-list ui-sortable">
            <% tasks.where.not(can_accept: 'company').each do |task| %>
              <li>
                <span class="handle ui-sortable-handle">
                  <i class="fa fa-ellipsis-v"></i>
                  <i class="fa fa-ellipsis-v"></i>
                </span>
                <span class="text">
                  <%= task.proposal.title %> - <%= task.description %>
                </span>
                <% if task.deadline > Date.today %>
                  <small class="label label-success"><i class="fa fa-clock-o"></i>  <%= (task.deadline - Date.today).to_int %> days</small>
                <% else %>
                  <small class="label label-danger"><i class="fa fa-clock-o"></i>  <%= (task.deadline - Date.today).to_int %> days</small>
                <% end %>
                <div class="tools">
                  <%= link_to task_task_complete_path(task) do %><i class="fa fa-thumbs-up"></i> <% end %>
                </div>
              </li>
            <%end%>
          </ul>
          <div class="box-footer clearfix no-border">
          </div>
        </div>
      </div>
      <!-- <div class='col-md-2'></div> -->
    </div>
  </div>
<% end %>



