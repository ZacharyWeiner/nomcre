<div class='card'>
  <div class='card-header'>
    <div class='card-title'>Package Type</div>
  </div>
  <div class='card-body'>
    <%= form_with(model: package_type, local: true) do |form| %>
      <% if package_type.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(package_type.errors.count, "error") %> prohibited this package_type from being saved:</h2>

          <ul>
          <% package_type.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <h4>General </h4>
      <div class="form-group">
        <%= form.label :base_price %>
        <%= form.text_field :base_price, id: :package_type_base_price, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :package_type_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :package_type_subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :page_header_text %>
        <%= form.text_field :page_header, id: :package_type_page_header, class: 'form-control' %>
      </div>

      <hr>

       <div class="form-group">
        <%= form.label :menu_link_text %>
        <%= form.text_area :menu_link_text, id: :package_type_menu_link_text, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :call_to_action_text %>
        <%= form.text_area :call_to_action_text, id: :package_type_call_to_action_text, class: 'form-control' %>
      </div>

       <div class="form-group">
        <%= form.label :header_image_id %>
        <%= form.collection_select(:header_image_id, @header_images, :id, :title, :html=> {class: 'form-control'}) %>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :show_in_menu %>
            <%= form.check_box :show_in_menu, id: :package_type_show_in_menu %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :show_on_index%>
            <%= form.check_box :show_on_index, id: :package_type_show_on_index %>
          </div>
        </div>
        <div class="col-md-4">
           <div class="form-group">
            <%= form.label :add_default_shot_list%>
            <%= form.check_box :add_default_shot_list, id: :add_default_shot_list %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
           <div class="form-group">
            <%= form.label :minimum_images %>
            <%= form.number_field :minimum_images, id: :package_type_minimum_images, class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-3">
           <div class="form-group">
            <%= form.label :minimum_videos %>
            <%= form.number_field :minimum_videos, id: :package_type_minimum_videos, class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= form.label :max_models %>
            <%= form.number_field :max_models, id: :package_type_max_models, class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= form.label :order %>
            <%= form.number_field :order, id: :package_type_order, class: 'form-control' %>
          </div>
        </div>
      </div>


      <hr>
      <h4>Content Area 1 </h4>

       <div class="form-group">
        <%= form.label :first_content_area_section_title %>
        <%= form.text_field :description_text_title, id: :package_type_description_text_title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :first_content_area_section_subtitle %>
        <%= form.text_field :description_text_subtitle, id: :package_type_description_text_subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :first_content_area_text %>
        <%= form.text_area :description, id: :package_type_description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :first_content_area_section_picture_or_gif %><br>
        <div class="fileinput fileinput-new text-center" data-provides="fileinput">
          <div class="fileinput-new thumbnail">
           <!-- < image_tag company.logo unless company.logo.nil? > -->
          </div>
          <div class="fileinput-preview fileinput-exists thumbnail"></div>
          <div>
             <label class="btn btn-simple btn-primary btn-lg">
              <i class='fas fa-camera fa-2x'></i>
              Upload new image
              <span style="display:none;">
              <%= form.file_field :description_image, id: :package_type_description_image, onchange: "validateImage(this);",
             data: { max_file_size: 25.megabytes }  %>
            </label>
            <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
          </div>
        </div>
      </div>

      <hr>
      <h4>Content Area 2 </h4>

      <div class="form-group">
        <%= form.label :second_content_area_section_title %>
        <%= form.text_field :example_image_title, id: :package_type_example_image_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :second_content_area_section_subtitle %>
        <%= form.text_field :example_image_subtitle, id: :package_type_example_image_subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :second_content_area_section_picture_or_gif %><br>
        <div class="fileinput fileinput-new text-center" data-provides="fileinput">
          <div class="fileinput-new thumbnail">
           <!-- < image_tag company.logo unless company.logo.nil? > -->
          </div>
          <div class="fileinput-preview fileinput-exists thumbnail"></div>
          <div>
             <label class="btn btn-simple btn-primary btn-lg">
              <i class='fas fa-camera fa-2x'></i>
              Upload new image
              <span style="display:none;">
              <%= form.file_field :example_image, id: :package_type_example_image, onchange: "validateImage(this);",
             data: { max_file_size: 25.megabytes }  %>
            </label>
            <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :second_content_area_text %>
        <%= form.text_area :example_image_description, id: :package_type_example_image_description, class: 'form-control' %>
      </div>

      <hr>
      <h4>Content Area 3 </h4>

      <div class="form-group">
        <%= form.label :third_content_area_title %>
        <%= form.text_field :example_video_title, id: :package_type_example_video_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :third_content_area_subtitle %>
        <%= form.text_field :example_video_subtitle, id: :package_type_example_video_subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :example_video_vimeo_url %>
        <%= form.text_field :example_video, id: :package_type_example_video, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :example_video_thumbnail %> <br>
        <div class="fileinput fileinput-new text-center" data-provides="fileinput">
          <div class="fileinput-new thumbnail">
           <!-- < image_tag company.logo unless company.logo.nil? > -->
          </div>
          <div class="fileinput-preview fileinput-exists thumbnail"></div>
          <div>
             <label class="btn btn-simple btn-primary btn-lg">
              <i class='fas fa-camera fa-2x'></i>
              Upload new image
              <span style="display:none;">
              <%= form.file_field :example_video_thumbnail, id: :package_type_example_video_thumbnail, onchange: "validateImage(this);",
             data: { max_file_size: 25.megabytes }  %>
            </label>
            <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :third_content_area_text %>
        <%= form.text_area :example_video_description, id: :package_type_example_video_description, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit "Save Package Type", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
