<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Package type</th>
      <th>Company</th>
      <th>Title</th>
      <th>Brief</th>
      <th>Deadline</th>
      <th>Price</th>
      <th>Deposit</th>
      <th>Balance</th>
      <th>Is complete</th>
      <th>Completed on</th>
      <th>Max user shot list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.package_type %></td>
        <td><%= project.company %></td>
        <td><%= project.title %></td>
        <td><%= project.brief %></td>
        <td><%= project.deadline %></td>
        <td><%= project.price %></td>
        <td><%= project.deposit %></td>
        <td><%= project.balance %></td>
        <td><%= project.is_complete %></td>
        <td><%= project.completed_on %></td>
        <td><%= project.max_user_shot_list %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

