<p id="notice"><%= notice %></p>

<h1>Discount Codes</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Discount type</th>
      <th>Expiration date</th>
      <th>Max uses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discount_codes.each do |discount_code| %>
      <tr>
        <td><%= discount_code.code %></td>
        <td><%= discount_code.discount_type %></td>
        <td><%= discount_code.expiration_date %></td>
        <td><%= discount_code.max_uses %></td>
        <td><%= link_to 'Show', discount_code %></td>
        <td><%= link_to 'Edit', edit_discount_code_path(discount_code) %></td>
        <td><%= link_to 'Destroy', discount_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

