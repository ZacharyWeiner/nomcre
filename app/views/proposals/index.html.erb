<div class="row">
  <div class="col-md-12">
    <% if @proposals.count == 0 %>
      <div class="alert alert-warning alert-dismissible">
        <h4><i class="icon fa fa-warning"></i> Wo0ps!</h4>
        You Havent Started Any Proposals Yet!
      </div>
    <% end %>
    <!-- The time line -->
    <ul class="timeline">
      <% @proposals.each do |proposal| %>
      <!-- timeline time label -->
      <!-- /.timeline-label -->
      <!-- timeline item -->
      <li >
        <%= render :partial => 'proposals/partials/timeline/shoot_type_icon', locals: {proposal: proposal}%>
        <div class="timeline-item bg-gray-gradient">
          <span class="time">
            Deadline: <i class="fa fa-clock-o"></i> <%= proposal.deadline %>
          </span>
          <h3 class="timeline-header"><%= link_to proposal.title, proposal %></h3>
          <div class="timeline-body">
            <%= render :partial => 'proposals/partials/timeline/timeline_body', locals: {proposal: proposal}%>
          </div>
          <div class="timeline-footer">
            <%= render :partial => 'proposals/partials/timeline/timeline_footer', locals: {proposal: proposal}%>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
  <!-- /.col -->
</div>



