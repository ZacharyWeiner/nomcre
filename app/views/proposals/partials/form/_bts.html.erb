<div class="panel box box-primary" >
  <div class="box-header with-border">
    <h4 class="box-title">Behind The Scenes</h4>
  </div>
  <div class="box-body">
    <%= check_box_tag 'proposal[bts][]', 'Photo', checked = @proposal.bts.include?("Photo") %>
    <%= f.label :photo %>
    <%= check_box_tag 'proposal[bts][]', 'Video', checked = @proposal.bts.include?("Video") %>
    <%= f.label :video %>
    <%= check_box_tag 'proposal[bts][]', 'SetUp', checked = @proposal.bts.include?("SetUp") %>
    <%= f.label :video %>
  </div>
</div>
