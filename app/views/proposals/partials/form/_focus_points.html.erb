<div class="panel box box-primary">
  <div class="box-header with-border">
    <h4 class="box-title">Focus Points (3 max)</h4>
  </div>
  <div class="box-body">
    <div class='row'>
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Top Left', checked = @proposal.focus_points.include?("Top Left") %>
        <%= f.label :top_left %>
      </div>
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Top Center', checked = @proposal.focus_points.include?("Top Center") %>
        <%= f.label :top_center %>
      </div>
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Top Right', checked = @proposal.focus_points.include?("Top Right") %>
        <%= f.label :top_right %>
      </div>

      <!-- Middle -->
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Middle Left', checked = @proposal.focus_points.include?("Middle Left") %>
        <%= f.label :middle_left %>
      </div>
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Middle Center', checked = @proposal.focus_points.include?("Middle Center") %>
        <%= f.label :middle_center %>
      </div>
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Middle Right', checked = @proposal.focus_points.include?("Middle Right") %>
        <%= f.label :middle_right %>
      </div>
      <!-- Botom -->
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Bottom Left', checked = @proposal.focus_points.include?("Bottom Left") %>
        <%= f.label :bottom_left %>
      </div>
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Bottom Middle', checked = @proposal.focus_points.include?("Bottom Middle") %>
        <%= f.label :bottom_center %>
      </div>
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Bottom Right', checked = @proposal.focus_points.include?("Bottom Right") %>
        <%= f.label :bottom_right %>
      </div>
      <div class='col-md-4'></div>
      <div class='col-md-4'>
        <%= check_box_tag 'proposal[focus_points][]', 'Dealers Choice', checked = @proposal.focus_points.include?("Dealers Choice") %>
        <%= f.label :dealers_choice %>
      </div>
      <div class='col-md-4'></div>
    </div>
  </div>
</div>
