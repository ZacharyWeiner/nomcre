
<div class="box box container">

    <div class='row'>
      <div class='col-md-12 col-sm-6 col-xs-7'>
        <h3 class="box-title">Deadline</h3>
        <div style="margin:12px; padding-bottom: 12px;">
          <%= f.text_field :deadline,  class: 'form-control datepicker' %>
        </div>
      </div>
      <div class='col-md-12 col-sm-6 col-xs-5'>
        <h3 class="box-title">Location</h3>
        <div style="margin:12px; padding-bottom: 12px;">
          <%= f.select(:location_id, options_for_select(Location.locations_for_select), {}, {class: 'form-control select2'}) %>
        </div>
      </div>
    </div>

</div>
