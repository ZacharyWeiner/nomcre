<% unless @proposal.deposit_paid %>
  <p> Deposit Must Be Paid Prior To Requesting Creatives </p>
<% end %>
<% @creatives = @proposal.find_creatives %>
<% @proposal.find_creatives.each do |sr| %>
  <div class='row'>
    <div class='col-md-3'><%= sr.user.name %></div>
    <div class='col-md-3'><%= sr.schedule_item.end_date %></div>
    <div class='col-md-3'><%= link_to "See Portfolio", user_show_path(sr.user), class: 'btn btn-primary' %></div>
    <div class='col-md-3'>
      <%= render :partial => 'proposals/partials/search_results/request_buttons', :locals => {:sr => sr}%>
    </div>
  </div>
  <div class='row'>
    <% sr.user.collection_items.reverse.take(4).each do |ci| %>
      <div class='col-md-3'>
        <%= image_tag ci.file, class: 'img-responsive' %>
      </div>
    <% end %>
  </div>
<% end %>

<% if @creatives.count == 0 %>
 <% @creatives = User.where(user_type: 'creative').take(10) %>
 <ul class="todo-list ui-sortable">
   <% @creatives.each do |cr| %>
    <li>
       <div class="user-block">
        <%= image_tag cr.user_profile.profile_photo, class: 'img-circle img-bordered-sm' %>
        <span class="username">
          <%= link_to cr.user_profile.display_name, user_collection_path(cr), style: 'margin-top:12px' %>
          <a href="#" class="pull-right btn-box-tool"><i class="fa fa-times"></i></a>
        </span>
      </div>
      <div class='row'>
        <% cr.collection_items.where(item_type: "image").reverse.take(4).each do |ci| %>
          <div class='col-md-3'>
            <%= image_tag ci.file, class: 'img-responsive' %>
          </div>
        <% end %>
      </div>
    </li>
  <% end %>
  </ul>
<% end %>
