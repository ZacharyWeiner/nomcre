<div class="card">
  <div class="card-header">
    <h5 class="card-category">Navigation Pills </h5>
    <h3 class="card-title"> Horizontal Tabs </h3>
  </div>
  <div class="card-body">
    <ul class="nav nav-pills nav-pills-primary">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#deposit">
          Deposit
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#balance">
          Balance
        </a>
      </li>
    </ul>
    <div class="tab-content tab-space">
      <div class="tab-pane active" id="deposit">
        <%= render :partial => 'proposals/partials/black_dashboard/payments/invoice_deposit', :locals => {:proposal => proposal} %>
      </div>
      <div class="tab-pane" id="balance">
        <%= render :partial => 'proposals/partials/black_dashboard/payments/invoice_balance', :locals => {:proposal => proposal} %>
      </div>
    </div>
  </div>
</div>





