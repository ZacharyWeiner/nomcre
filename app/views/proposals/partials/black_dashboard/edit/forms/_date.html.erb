<%= form_for proposal, class: 'form-horizontal' do |form| %>
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <i class="tim-icons"><ion-icon name="calendar" class='text-primary center' size='large'></ion-icon></i>
      </div>
    </div>
    <%= form.text_field :deadline,  class: 'form-control datetimepicker' %>

  </div>
  <%= proposal.deadline.strftime('%A %b %d, %Y') unless proposal.deadline.nil? %>
  <%= form.submit "Save", class: 'btn btn-primary pull-right' %>
<% end %>



