<div class="small-box bg-green">
  <div class="inner">
    <h3><%= proposal.shot_list_items.count%> of 25</h3>
    <p>Available Shots  </p>
    <small>[We will deliver much more!]</small>
  </div>
  <div class="icon">
    <i class="fa fa-list"></i>
  </div>
  <% unless  (proposal.company.users.include?(current_user) == false || proposal.paid == true) %>
    <% if proposal.shot_list_items.count < 25 %>
      <%= link_to new_proposal_shot_list_item_path(@proposal), class: 'small-box-footer' do %>
        <i class="fa fa-plus"></i> Add To Shot List
      <% end %>
    <% end %>
  <% end %>
</div>
