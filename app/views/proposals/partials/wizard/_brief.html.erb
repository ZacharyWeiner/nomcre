<h3 class="box-title text-center" style='padding-left: 6px'>Tell Us About Your Vision</h3>
<h5 class="box-title text-center" style='padding-left: 6px'>(Your Shot List Comes Later)</h5>
<%= form_for proposal, class: 'form-horizontal' do |form| %>
<div class="form-group">
  <div class="box-header with-border">

  </div>
  <%= form.text_area :content, class: 'form-control', placeholder: 'How do you want to see your stuff represented?', maxlength: 15000, rows: 25 %>
  <br>
    <%= form.hidden_field :redirect, :value => 'wizard' %>
    <%= form.hidden_field :source, :value => 'brief' %>
    <%= form.submit "Next Step", class: 'btn btn-success' %>
</div>
<% end %>
