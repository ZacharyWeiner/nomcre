<%= form_for(proposal) do |f| %>
  <% if proposal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(proposal.errors.count, "error") %> prohibited this proposal from being saved:</h2>

      <ul>
      <% proposal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">Assistants</h3>
    </div>
    <div class="box-body">

      <div id="assistants">
        <%= f.fields_for :assistants do |assistant| %>
          <div class='nested-fields info-box'>
              <div class="input-group">
                <span class="input-group-addon">@</span>
                <%= assistant.text_field :name, class: "form-control ", placeholder: "Full Name" %>
              </div>


              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <%= assistant.text_field :paypal_email, class: "form-control ", placeholder: "PayPal Email" %>
              </div>

              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                <%= assistant.text_field :phone, class: "form-control ", placeholder: "Assistant Phone Number" %>
              </div>

              <div class='row'>
                <div class='col-md-6'>
                  <div class="input-group">
                    <span class="input-group-addon"> <%= assistant.label :daily_rate %></span>
                    <%= assistant.number_field :rate, class: "form-control" %>
                  </div>
                </div>
                <div class="col-md-6" >
                  <div class="input-group">
                    <span class="input-group-addon"> <%= assistant.label :assistant_type %></span>
                    <%= assistant.select :assistant_type, options_for_select([['General', 'General'], ['HMU', 'HMU'], ['Model','Model']]), {}, {class: 'form-control '}  %>
                  </div>
                </div>
              </div>
          </div>
          <br>
        <% end %>

        <div class="links">
        <%= link_to_add_association 'add assistant', f, :assistants, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <%= f.submit "Save", class: 'btn btn-success pull-right', style: 'margin-right:24px;' %>
  </div>
<% end %>




