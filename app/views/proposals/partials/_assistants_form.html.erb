<%= form_for(proposal) do |f| %>
  <% if proposal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(proposal.errors.count, "error") %> prohibited this proposal from being saved:</h2>

      <ul>
      <% proposal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="box box-info">
    <div class="box-header with-border">
      <h3 class="box-title">Assistants</h3>
    </div>
    <div class="box-body">

      <div id="assistants">
        <%= f.fields_for :assistants do |assistant| %>
          <div class='nested-fields info-box'>
            <div class='row'>
              <div class='col-md-4'>
                <%= assistant.label :name %>
                <%= assistant.text_field :name, class: 'form-control' %>
              </div>
              <div class='col-md-4'>
                <%= assistant.label :paypal_email %>
                <%= assistant.text_field :paypal_email, class: 'form-control' %>
              </div>
              <div class='col-md-4'>
                <%= assistant.label :phone %>
                <%= assistant.text_field :phone, class: 'form-control' %>

              </div>
              <div class='col-md-4'>
                <%= assistant.label :rate %>
                <%= assistant.text_field :rate, class: 'form-control' %>
              </div>
              <div class='col-md-4'>
                <%= assistant.label :assistant_type %>
                <%= assistant.text_field :assistant_type, class: 'form-control' %>
              </div>
            <% assistant.check_box :_destroy %>
            </div>
          </div>
          <br>
        <% end %>

        <div class="links">
        <%= link_to_add_association 'add assistant', f, :assistants, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <%= f.submit "Save", class: 'btn btn-success pull-right', style: 'margin-right:24px;' %>
  </div>
<% end %>




