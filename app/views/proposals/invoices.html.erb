 <%= Proposal.where(company: current_user.company).where(deposit_paid: true).or.where(paid: true).each do |p| %>
    <div class='row'>
      <div class='col-md-8'><%= p.title %></div>
      <div class='col-md-2'>
        <%= link_to "Deposit", proposal_invoice(@proposal, :q => "deposit"), class: 'btn btn-primary' %>
      </div>
      <div class='col-md-2'>
        <%= link_to "Balance", proposal_invoice(@proposal, :q => "balance"), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
