<p id="notice"><%= notice %></p>

<h1>Shot List Item Templates</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Background</th>
      <th>Item type</th>
      <th>Focus point</th>
      <th>Reference image</th>
      <th>Aspect ratio</th>
      <th>Frame rate</th>
      <th>Task group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shot_list_item_templates.each do |shot_list_item_template| %>
      <tr>
        <td><%= shot_list_item_template.description %></td>
        <td><%= shot_list_item_template.background %></td>
        <td><%= shot_list_item_template.item_type %></td>
        <td><%= shot_list_item_template.focus_point %></td>
        <td><%= shot_list_item_template.reference_image %></td>
        <td><%= shot_list_item_template.aspect_ratio %></td>
        <td><%= shot_list_item_template.frame_rate %></td>
        <td><%= shot_list_item_template.task_group %></td>
        <td><%= link_to 'Show', shot_list_item_template %></td>
        <td><%= link_to 'Edit', edit_shot_list_item_template_path(shot_list_item_template) %></td>
        <td><%= link_to 'Destroy', shot_list_item_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

