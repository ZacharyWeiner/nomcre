<div class="nk-header-title nk-header-title-sm nk-header-title-parallax nk-header-title-parallax-opacity">
  <div class="nk-header-table">
    <div class="nk-header-table-cell">
      <div class="container">
        <h1 class=""><%= @collection.title %></h1>
        <%= @collection.user.user_profile.display_name%>
      </div>
    </div>
  </div>
</div>
<%= link_to '<Back', collection_path(@collection_item.collection) %>
<% if @collection_item.item_type == 'video'%>
<%= video_tag @collection_item.video, controls: true, controlsList:"nodownload", class: 'embed-responsive', oncontextmenu:"return false;" %>
<% else  %>
<%= image_tag @collection_item.file, class: "img-responsive" %>
<% end %>
<%= link_to "<i class='fa fa-arrow-down'></i> Download".html_safe, download_path(@collection_item)%>
<span style='padding: 12px;'></span>
<%= link_to collection_collection_item_path(@collection_item.collection, @collection_item), method: :delete, data: { confirm: 'Are you sure?' } do %>
  <i class='fa fa-trash'></i> Delete
<% end %>
</div>



